# Example environment configuration for Red Tide Automation
# Copy this file to `.env` and fill in values. Do NOT commit `.env`.

# WordPress API
WORDPRESS_SITE_URL=
WORDPRESS_USERNAME=
# You can provide plain text or base64-encoded app password
WORDPRESS_APP_PASSWORD=

# Google Sheets and Service Account
# Provide the full JSON of the service account as a single line JSON string
# Example: {"type":"service_account", ...}
GOOGLE_SERVICE_ACCOUNT=
GOOGLE_SHEET_ID=

# Logging and behavior
LOG_LEVEL=INFO
VERBOSE_LOGGING=false
TEST_MODE=false
TEST_LIMIT=10
